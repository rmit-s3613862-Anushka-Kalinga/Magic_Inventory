@model Magic_Inventory.Models.StockRequest


<h4>New Product Stock Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.NumberofProducts > 0)
        {
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StoreID" value=@ViewBag.StoreID />
                <div class="form-group">
                    <label asp-for="ProductID" class="control-label"> Product Name</label>
                    <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Request Stock" class="btn btn-primary" />
                </div>
            </form>
        }
        else
        {
            <label>You don't have new products to request</label>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
